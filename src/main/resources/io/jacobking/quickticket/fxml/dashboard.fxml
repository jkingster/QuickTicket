            <tabs>
                <Tab text="Ticket">
                    <fx:include source="ticket.fxml"/>
                </Tab>
                <Tab text="Employee">
                    <content>
                        <fx:include source="employee.fxml"/>
                    </content>
                </Tab>
                <Tab text="Inventory">
                    <content>
                        <fx:include source="inventory.fxml"/>
                    </content>
                </Tab>
                <Tab text="Settings">
                    <content>
                        <fx:include source="new-settings.fxml"/>
                    </content>
                </Tab>
                <Tab fx:id="developerTab" closable="false" disable="true" style="visibility: hidden;" text="Developer"/>
            </tabs>
        </TabPane>
        <Label layoutX="1127.0" layoutY="3.0" styleClass="title" text="QuickTicket"/>
        <Label fx:id="versionLabel" layoutX="1212.0" layoutY="6.0" styleClass="version" text="undefined"/>
    </children>
    <stylesheets>
        <URL value="@../css/core/base.css"/>
        <URL value="@../css/screen/dashboard.css"/>
    </stylesheets>
