<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0"
            prefWidth="1280.0" styleClass="body" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <AnchorPane prefHeight="200.0" prefWidth="200.0">
            <children>
                <MenuBar prefHeight="25.0" prefWidth="1280.0">
                    <menus>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#onAbout" text="About"/>
                                <MenuItem mnemonicParsing="false" onAction="#onConfiguration" text="Database"/>
                                <MenuItem mnemonicParsing="false" onAction="#onSMTP" text="SMTP"/>
                                <MenuItem mnemonicParsing="false" onAction="#onSettings" text="Settings"/>
